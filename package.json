{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "dev": "nodemon ./src/app.ts",
    "swagger-autogen": "node swagger.js",
    "prod": "tsc && pm2 start ./build/src/app.js -n cloakRoom_server",
